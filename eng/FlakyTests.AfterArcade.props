<Project>
  <!-- Override where xUnit logs and results go if we're doing the flaky run -->
  <PropertyGroup Condition="'$(RunFlakyTests)' == 'true'">
    <ArtifactsLogDir>$(ArtifactsDir)log\$(Configuration)_flaky\</ArtifactsLogDir>
    <ArtifactsTestResultsDir>$(ArtifactsDir)TestResults\$(Configuration)_flaky\</ArtifactsTestResultsDir>
  </PropertyGroup>
</Project>
